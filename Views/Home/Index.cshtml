@model Search
@{
    ViewData["Title"] = "Search";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the OMDb Searcher!</h1>
    <p>Please enter your search below:</p>
</div>
<div>
    <form asp-controller="Home" asp-action="Search">
        <div class="form-group">
            <label asp-for="SearchTerm" class="control-label">Search Term:</label>
            <input asp-for="SearchTerm" class="form-control" />
            <span asp-validation-for="SearchTerm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label">Production Type:</label>
            <select asp-for="Type" class="form-control">
                <option>Anything</option>
                <option>Movie</option>
                <option>TV Series</option>
            </select>
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>


